<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- Berserker Pain Boost -->
	<HediffDef ParentName="BEWH_StatAlteringHediffDef">
		<defName>BEWH_BerserkerPainBoost</defName>
		<hediffClass>Genes40k.Hediff_SeverityByPain</hediffClass>
		<label>unyielding rage</label>
		<description>Berserkers channel their pain into raw fury. The greater the pain, the deadlier their strikes become...</description>
		<stages>
			<li>
				<minSeverity>0</minSeverity>
				<painFactor>1.3</painFactor>
				<label>no pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.2</minSeverity>
				<painFactor>1.3</painFactor>
				<label>tingling pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
					<MoveSpeed>0.1</MoveSpeed>
					<MeleeCooldownFactor>-0.05</MeleeCooldownFactor>
					<MeleeHitChance>1</MeleeHitChance>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.3</minSeverity>
				<painFactor>1.3</painFactor>
				<label>stinging pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
					<MoveSpeed>0.2</MoveSpeed>
					<MeleeCooldownFactor>-0.1</MeleeCooldownFactor>
					<MeleeHitChance>3</MeleeHitChance>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.55</minSeverity>
				<painFactor>1.3</painFactor>
				<label>searing pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
					<MoveSpeed>0.4</MoveSpeed>
					<MeleeCooldownFactor>-0.2</MeleeCooldownFactor>
					<MeleeHitChance>6</MeleeHitChance>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.65</minSeverity>
				<painFactor>1.3</painFactor>
				<label>enraging pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
					<MoveSpeed>0.6</MoveSpeed>
					<MeleeCooldownFactor>-0.25</MeleeCooldownFactor>
					<MeleeHitChance>8</MeleeHitChance>
				</statOffsets>
			</li>
			<li>
				<minSeverity>0.8</minSeverity>
				<painFactor>1.3</painFactor>
				<label>wrathful pain</label>
				<statOffsets>
					<PainShockThreshold>2</PainShockThreshold>
					<MoveSpeed>1</MoveSpeed>
					<MeleeCooldownFactor>-0.35</MeleeCooldownFactor>
					<MeleeHitChance>10</MeleeHitChance>
				</statOffsets>
			</li>
		</stages>
		<comps Inherit="False"/>
	</HediffDef>

	<!-- Ranged -->
	<HediffDef ParentName="BEWH_StatAlteringHediffDef">
		<defName>BEWH_RangedThunderBoost</defName>
		<label>shooting frenzy</label>
		<description>Ratatatatatata! Make it rain lead!</description>
		<stages>
			<li>
				<statOffsets>
					<ShootingAccuracyPawn>-5</ShootingAccuracyPawn>
				</statOffsets>
				<statFactors>
					<AimingDelayFactor>0.5</AimingDelayFactor>
					<RangedCooldownFactor>0.5</RangedCooldownFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_Effecter">
				<stateEffecter>BEWH_BerserkEffecter</stateEffecter>
			</li>
    	</comps>
	</HediffDef>

	<!-- Primarch -->
	<HediffDef ParentName="BEWH_StatAlteringHediffDef">
		<defName>BEWH_PrimarchImmortality</defName>
		<label>immortal will</label>
		<description>Virtual immortality. FOR THE EMPEROR!</description>
		<stages>
			<li>
				<statFactors>
					<IncomingDamageFactor>0</IncomingDamageFactor>
				</statFactors>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_GiveHediffsInRange"> <!-- That's effed up, but I have no idea how to slap motes to hediffs the other way ~Cheese -->
				<mote>BEWH_MoteBubbleSmall</mote>
			</li>
    	</comps>
	</HediffDef>

</Defs>