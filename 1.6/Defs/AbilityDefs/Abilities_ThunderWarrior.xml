<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!-- Staple Wounds -->
    <AbilityDef>
        <defName>BEWH_SearWounds</defName>
        <label>staple wounds</label>
        <description>Roughly staple the wounds of an ally, stopping all bleeding instantly, but causing additional damage in the process.</description>
        <cooldownTicksRange>10000</cooldownTicksRange>
        <iconPath>UI/Abilities/BEWH_AbilityVitalseerSearWounds</iconPath>
        <jobDef>CastAbilityOnThingMelee</jobDef>
        <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
        <targetRequired>true</targetRequired>
        <showWhenDrafted>true</showWhenDrafted>
        <hostile>false</hostile>
        <verbProperties>
            <verbClass>Verb_CastAbilityTouch</verbClass>
            <range>-1</range>
            <warmupTime>1</warmupTime>
            <targetParams>
                <canTargetPawns>true</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetAnimals>false</canTargetAnimals>
                <canTargetMechs>false</canTargetMechs>
                <canTargetBloodfeeders>false</canTargetBloodfeeders>
                <canTargetCorpses>false</canTargetCorpses>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="Genes40k.CompProperties_AbilitySearWounds" />
        </comps>
    </AbilityDef>

    <!-- Resurrecting Shock -->
    <AbilityDef>
        <defName>BEWH_ResurrectingShock</defName>
        <label>resurrecting shock</label>
        <description>Applies a quick shock that energizes the still active restorative fluids of the Vigoranis, effectively jump-starting the pawn back to life. Resurrection beyond the second hour of death may result in brain damage.</description>
        <cooldownTicksRange>180000</cooldownTicksRange>
        <iconPath>UI/Abilities/BEWH_AbilityVitalseerRessurect</iconPath>
        <jobDef>CastAbilityOnThingMelee</jobDef>
        <displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
        <disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
        <targetRequired>true</targetRequired>
        <showWhenDrafted>true</showWhenDrafted>
        <hostile>false</hostile>
        <verbProperties>
            <verbClass>Verb_CastAbilityTouch</verbClass>
            <range>-1</range>
            <warmupTime>4</warmupTime>
            <targetParams>
                <canTargetPawns>false</canTargetPawns>
                <canTargetBuildings>false</canTargetBuildings>
                <canTargetAnimals>false</canTargetAnimals>
                <canTargetMechs>false</canTargetMechs>
                <canTargetBloodfeeders>false</canTargetBloodfeeders>
                <canTargetCorpses>true</canTargetCorpses>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="Genes40k.CompProperties_AbilityResurrectingShock" />
        </comps>
    </AbilityDef>

    <!-- Ranged -->
    <AbilityDef ParentName="BEWH_SelfTargetAbilities">
        <defName>BEWH_RangedThunderBoost</defName>
        <label>shooting frenzy</label>
        <description>The Stormtrooper is able to enter a shooting frenzy, massively increasing their their firepower at the cost of reduced accuracy.</description>
        <iconPath>UI/Abilities/BEWH_AbilityShootingFrenzy</iconPath>
        <cooldownTicksRange>20000</cooldownTicksRange>
        <statBases>
            <Ability_Duration>82</Ability_Duration>
        </statBases>
        <comps>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>BEWH_RangedThunderBoost</hediffDef>
                <onlyApplyToSelf>True</onlyApplyToSelf>
                <replaceExisting>true</replaceExisting>
            </li>
        </comps>
    </AbilityDef>

    <!-- Primarch -->
    <AbilityDef ParentName="BEWH_SelfTargetAbilities">
        <defName>BEWH_PrimarchImmortality</defName>
        <label>immortal will</label>
        <description>By sheer force of will, the Primarch is able to withstand any and all attacks for a short time.</description>
        <iconPath>UI/Abilities/BEWH_AbilityImmortalWill</iconPath>
        <cooldownTicksRange>120000</cooldownTicksRange>
        <statBases>
            <Ability_Duration>20</Ability_Duration>
        </statBases>
        <comps>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>BEWH_PrimarchImmortality</hediffDef>
                <onlyApplyToSelf>True</onlyApplyToSelf>
                <replaceExisting>true</replaceExisting>
            </li>
        </comps>
    </AbilityDef>

</Defs>